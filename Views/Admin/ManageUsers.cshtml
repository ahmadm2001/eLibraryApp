@model IEnumerable<eLibraryApp.Models.User>

<div class="container py-5" style="background-color: #f8faff;">
    <h2 class="mb-4 text-center" style="font-weight: bold; color: #2c3e50;">Manage Users</h2>
    <div class="mb-3 text-end">
        <a href="/Admin/AddUser" class="btn btn-primary" style="font-weight: bold;">Add New User</a>
    </div>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@($"{user.FirstName} {user.LastName}")</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-warning btn-sm me-2">Edit</a>
                        <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        background-color: #f8faff;
        font-family: 'Roboto', Arial, sans-serif;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #217dbb;
        }

    .btn-warning {
        background-color: #f39c12;
        border: none;
        font-weight: bold;
    }

        .btn-warning:hover {
            background-color: #d35400;
        }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .table-dark th {
        background-color: #2c3e50;
        color: #ffffff;
    }
</style>
