@model IEnumerable<eLibraryApp.Models.Book>

<div class="container py-5" style="background-color: #f8faff;">
    <h2 class="mb-4 text-center" style="font-weight: bold; color: #2c3e50;">Manage Discounts</h2>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Buy Price</th>
                <th scope="col">Discounted Price</th>
                <th scope="col">Discount Start Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.BuyPrice.ToString("C")</td>
                    <td>@(book.DiscountedPrice.HasValue ? book.DiscountedPrice.Value.ToString("C") : "<span class='text-danger'>N/A</span>")</td>
                    <td>@(book.DiscountStartDate.HasValue ? book.DiscountStartDate.Value.ToString("MM/dd/yyyy") : "<span class='text-danger'>N/A</span>")</td>
                    <td>
                        <a href="@Url.Action("EditDiscount", "Admin", new { id = book.BookId })" class="btn btn-sm btn-primary">
                            Edit Discount
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        background-color: #f8faff;
        font-family: 'Roboto', Arial, sans-serif;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #217dbb;
        }

    .table-dark th {
        background-color: #2c3e50;
        color: #ffffff;
    }
</style>
